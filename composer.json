{
    "name": "lionheart-group/template-oriented-form-utilities",
    "description": "Template-Oriented Form Utilities",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TofuPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TofuPlugin\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "LionHeart Group",
            "email": "info@lionheart.co.jp"
        }
    ],
    "config": {
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "require": {
        "monolog/monolog": "^2.9",
        "wixel/gump": "^2.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/extension-installer": "^1.3",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=512M",
        "test": "phpunit",
        "check": [
            "@phpstan",
            "@test"
        ]
    }
}
